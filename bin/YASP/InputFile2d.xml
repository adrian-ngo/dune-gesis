<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
In this exmaple, the flow is driven by a gradient in the hydraulic head and by injection and extraction wells.
For the solute tansport equations, the tracer is feeded through an injection well. See well_data 
-->
<!-- 
#define VERBOSITY_SILENT          0
#define VERBOSITY_INVERSION       1
#define VERBOSITY_TIMER_SUMMARY   2
#define VERBOSITY_TIMER_DETAILS   3
#define VERBOSITY_EQ_SUMMARY      4
#define VERBOSITY_EQ_DETAILS      5
#define VERBOSITY_LS_SUMMARY      6
#define VERBOSITY_LS_DETAILS      7
#define VERBOSITY_L_CONTRIB       8
#define VERBOSITY_DEBUG_LEVEL     9
-->
<inputfile verbosity="6">
  <!-- ***************************************** -->
  <!-- Which quantities should be plotted ? -->
  <!-- ***************************************** -->
  <plot_options
      vtk_plot_yfield="yes"
      vtk_plot_wells="no"
      vtk_plot_head="yes"
      vtk_plot_element_ordering="yes"
      vtk_plot_q="yes"
      vtk_plot_m0="yes"
      vtk_plot_m1="yes"
      vtk_plot_y_old="yes"
      vtk_plot_trialfields="no"
      vtk_plot_adjoint_head="no"
      vtk_plot_adjoint_m0="no"
      vtk_plot_adjoint_m1="no"
      vtk_plot_sensitivities="no"
      vtk_plot_cross_covariances="no"
      vtk_plot_y_smooth="no"
      vtk_plot_y_try="no"
      vtk_plot_h_old="no"
      vtk_plot_m0_old="no"
      />
  <!-- ***************************************** -->
  <!-- problem_types: What problems should be solved? -->
  <!-- new_YField="no": 
       Re-load the Y-field from a HDF5 file if it exists and has the same geostatistical properties. 
       Otherwise ("yes"), generate a new random field. -->
  <!-- new_Eigenvalues="yes": 
       Re-calculate the auto-covariance function and the eigenvalues of the circulant
       matrix (for the case that a new field should be generated). 
       Otherwise ("no"), skip this step. -->
  <!-- synthetic="yes":
       Working with synthetically generated fields. 
       Otherwise ("no"), you must provide all measurement data yourself. -->
  <!-- -->
  <!-- using_existing_Yold="yes":
       Use the estimate of a previous inversion run as the initial guess for the next inversion.
       In this case, you must start 'gesis2dDG' or 'gesis2dFEM' with the parameter -c.
       Otherwise, the old inversion result will be removed and the computation starts
       with a homogeneous guess.
  -->
  <!-- refine_estimate="0": Keep this default if you do not plan to work with two global refinement levels.
       refine_estimate="1": The result of your parameter estimation will be projected into a once globally
       refined mesh and can be used as the initial guess for a next inversion on the once globally refined mesh.
  -->
  <!--
      head_forward="on":       Solve the steady-state groundwater equation (forward problem).
      transport_forward="on":  Solve the steady-state forward groundwater and transport equations (zero-th and first temp.moments).
  -->
  <!-- lnK_inversion="on"              : Use direct measurements of Y=log(K) for your inversion. -->
  <!-- head_inversion="on"             : Use head measurements for your inversion. -->
  <!-- transport_inversion_m0="on"     : Use m0 measurements for your inversion. -->
  <!-- transport_inversion_m1="on"     : Use m0 measurements for your inversion. -->
  <!-- generate_measurement_data="on"  : 
       Solve the forward problems listed by the previous three XML attributes 
       'head_inversion', 'transport_inversion_m0' and/or 'transport_inversion_m1' 
       and take point measurements listed at the points listed below in the 
       XML-tags: head_measurements, m0_measurements and/or m1_measurements.
       The measurement points for head inversion are active if head_inversion="on".
       The measurement points for m0 inversion are active if transport_inversion_m0="on".
       The measurement points for m1 inversion are active if transport_inversion_m1="on".
  -->
  <!-- -->
  <!-- ***************************************** -->
  <problem_types 
      new_YField="no"  
      new_Eigenvalues="no"
      synthetic="yes" 
      using_existing_Yold="yes"
      refine_estimate="0"
      head_forward="off" 
      transport_forward="off"
      lnK_inversion="off" 
      head_inversion="on"
      transport_inversion_m0="off" 
      transport_inversion_m1="on" 
      generate_measurement_data="off"
      />
  <!-- ***************************************** -->
  <!-- Domain Data: -->
  <!-- ***************************************** -->
  <!-- extensions:     Lx  Ly (physical lenghts of the domain in x and y direction) -->
  <!-- virtual_nCells: Nx  Ny (number of cells in the structured mesh in x and y direction) 
       The log conductivity field is resolved on the very same mesh yielding N = Nx * Ny cells in total. -->
  <!-- Please do not change the remaing domain data. -->
  <domain_data>
    <extensions>51.2   51.2</extensions>
    <virtual_nCells>128   128</virtual_nCells>
    <lineplot>
      <startpoint>0.0 0.0</startpoint>
      <endpoint>100.0 100.0</endpoint>
    </lineplot>
    <chunks>16 16</chunks>
    <yasp_grid baselevel="0" maxlevel="0" overlap="1"></yasp_grid>
  </domain_data>
  <!-- *********************************************** -->
  <!-- Geo-statistical properties of the random field  -->
  <!-- *********************************************** -->
  <yfield_properties vertical_zones="1" well_type="cell" random_seed="0">
    <!-- model    : The variogram model can be either "gaussian", "exponential" or "spherical". -->
    <!-- variance : The variance in the semi-variogram function. -->
    <!-- beta     : The trend coefficient = mean value of the Y=log(K). (Only one dimension!) -->
    <!-- qbb_y    : The variability of beta. -->
    <!-- porosity : The porosity is assumed to be constant in space. Range=(0.01,0.99) -->
    <!-- -->
    <!-- The correlation lengths are specified per dimension. -->
    <zone 
        model="spherical"
        variance="1.0"
        beta="-6.1" 
        qbb_y="0.0005" 
        porosity="0.3"
        >
      <correlationlengths>2.0  2.0</correlationlengths>
    </zone>
  </yfield_properties>
  <!-- -->
  <!-- -->
  <!-- ***************************************** -->
  <!-- Transport Problem: -->
  <!-- ***************************************** -->
  <!-- a_l            : longitudinal dispersivity used for the Scheidegger dispersion tensor -->
  <!-- a_t            : transversal dispersivity used for the Scheidegger dispersion tensor -->
  <!-- D_m            : molecular diffusion -->
  <!-- istl_max_iter  : maximal number of iteration steps for the linear solver of the transport equations -->
  <!-- istl_reduction : reduction of the residual for the linear solver of the transport equations -->
  <!-- tolerance      : Used only for adaptive forward solution of the transport equations (stopping criteria when maximal undershoots are below 1.0 percent ) -->
  <transport_parameters
      a_l="1E-3"
      a_t="1E-4"
      D_m="1E-9"
      deltaSD_factor="1.0"
      istl_max_iter="2000"
      istl_reduction="1e-8"
      tolerance="1.0"
      />
  <!-- -->
  <!-- -->
  <!-- -->
  <!-- ***************************************** -->
  <!-- Inverse Problem: -->
  <!-- ***************************************** -->
  <!-- max_iter    : maximal number of Gauss-Newton steps in the inversion scheme -->
  <!-- disturbance : You may add extra noise to your measurement data. disturbance="5.0" would add 5 percent normally distributed error. -->
  <!-- m1relerror  : from the maximum over all m1 measurements within a setup, we take 0.005 = 0.5 percent as the maximal absolute error.
       Take care: The choice of this value has a direct influence on the value of the objective function and therefore on the convergence 
       behaviour of the inversion scheme. The larger the value for 'm1relerror', the smaller the objective function becomes. -->
  <!-- Do not change the other values -->
  <inversion_parameters
      max_iter="20"
      disturbance="0.0"
      m1relerror="0.005"
      lim_stepsize="0.75" 
      weighting_lim="1E-3"
      dY_lim="0.05" 
      dL_lim_fac="0.02"
      L_accept_confidence_interval="0.95"
      />
  <!-- -->
  <!-- -->
  <!-- -->
  <!-- ***************************************** -->
  <!-- Setups for the calculations:              -->
  <!-- ***************************************** -->
  <Setups total_setups="4">
    <!-- -->
    <!-- -->
    <!-- ***************************************** -->
    <!-- Setup #0:-->
    <!-- ***************************************** -->
    <Setup>
      <!-- ***************************************** -->
      <!-- Groundwater Flow BCs: -->
      <!-- ***************************************** -->
      <flow_equation recycle_matrix_hierarchy="yes">
        <boundary orientation="west" bctype="1" nstripes="1">
          <!-- bctype=1 and value=100 means: Dirichlet boundary condition with given value 100 -->
          <stripe value="100">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe> 
        </boundary> 
        <boundary orientation="east" bctype="1">
          <!-- bctype=1 and value=99.88 means: Dirichlet boundary condition with given value 99.88 -->
          <stripe value="99.88" >
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="south" bctype="0">
          <!-- bctype=0 means: Neumann boundary condition with zero flux -->
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="north" bctype="0">
          <!-- bctype=0 means: Neumann boundary condition with zero flux -->
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
      </flow_equation>
      <!-- ***************************************** -->
      <!-- Concentration BCs: -->
      <!-- ***************************************** -->
      <transport_equation recycle_matrix_hierarchy="no" injection_time="100">
        <boundary orientation="west" bctype="1" nstripes="1">
          <!-- bctype=1 and value=0 means: Dirichlet boundary condition with given value 0 -->
          <stripe value="0.0" regularization_factor="1.0" regularization_type="dynamic">
            <startpoint>20</startpoint>
            <endpoint>30</endpoint>
          </stripe> 
        </boundary>
        <boundary orientation="east" bctype="-1">
          <!-- bctype=-1 means: Outflow boundary condition with convective flux only given by the solution itself -->
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="south" bctype="0">
          <!-- bctype=0 means: Neumann boundary condition with zero flux -->
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="north" bctype="0">
          <!-- bctype=0 means: Neumann boundary condition with zero flux -->
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
      </transport_equation>
      <!-- ***************************************** -->
      <!-- Pumping Data: point source(pumping data) and well data -->
      <!-- ***************************************** -->
      <pumping_data total="0" datafile="">
        <!-- Pumping data must have this format, one line per location (x,y,z): -->
        <!-- x   y         pumping rate   temperature temperature injection time concentration   concentration injection time(sec) (seperated by blank or tab) -->
        4.0   5.00    0.00050    1   7200    0.5 7200
        2.0   5.40    0.00250    1   7200    0.5 7200
      </pumping_data>
      <!-- Take care: In the 2-D well model, the y-axis represents the vertical z-axis.-->
      <well_data total="4" datafile="">
        <!-- Well data format: setup #0 -->
        <!-- x          = position of the well along the x-axis -->
        <!-- zTop       = (upper) z-coordinate at which the notches of the well start -->
        <!-- zBottom    = (lower) z-coordinate at the location of the well-bottom -->
        <!-- k_well     = choose a very high conductivity inside the well, e.g. 10.0 -->
        <!-- flow_rate  = negative for pumping or positive for injection -->
        <!-- T              = temperature difference for injection (will not be used for extraction wells) -->
        <!-- t_inject       = injection time for the heat tracer -->
        <!-- c              = concentration of the tracer (only active for positive flow rates) -->        
        <!-- injection_time = injection time for the solute tracer -->
        <!-- One line per well: -->
        <!-- x   zTop     zBottom   k_well    flow_rate    T     t_inject   c     injection_time -->
        12.5       25.01     25.0      10.0        2.4e-3     0.0   100      0.0  100
        17.5       25.01     25.0      10.0        8e-4     1.0   100      1.0  100
        32.5       25.01     25.0      10.0       -8e-4     0.0   100.0    0.0  100.0
        37.5       25.01     25.0      10.0       -2.4e-3     0.0   100.0    0.0  100.0
      </well_data>
      <!-- -->   
      <!-- --> 
      <!-- ******************* -->
      <!-- lnK data            -->
      <!-- ******************* -->
      <lnk_inversion_data>
        <!-- Direct measurements of hydraulic conductivity K: -->
        <lnk_measurements total="4" datafile="">
          <!-- This data (one line per location) must have exactly the following format: -->
          <!-- x, y, abs_error, rel_error, value (seperated by blank or tab) -->
          2.0    2.0    0.0   0.05    0.0 
          2.0    8.0    0.0   0.05    0.0 
          8.0    2.0    0.0   0.05    0.0
          8.0    8.0    0.0   0.05    0.0
        </lnk_measurements> 
      </lnk_inversion_data>
      <!-- -->
      <!-- -->
      <!-- ******************* -->
      <!-- hydraulic head data -->
      <!-- ******************* -->
      <head_inversion_data regularization_factor="1e-6" regularization_type="dynamic">
        <!-- Measurement of hydraulic head -->
        <head_measurements total="16" datafile="">
          <!-- (one line per location) must have exactly the following format: -->
          <!-- x, y, abs_error, rel_error, value (seperated by blank or tab) -->
          20.5      20.5           0.005   0.0   0
          23.5      20.5           0.005   0.0   0
          26.5      20.5           0.005   0.0   0
          29.5      20.5           0.005   0.0   0
          20.5       23.5           0.005   0.0   0
          23.5       23.5           0.005   0.0   0
          26.5       23.5           0.005   0.0   0
          29.5       23.5           0.005   0.0   0
          20.5      26.5           0.005   0.0   0
          23.5      26.5           0.005   0.0   0
          26.5      26.5           0.005   0.0   0
          29.5      26.5           0.005   0.0   0
          20.5       29.5           0.005   0.0   0
          23.5       29.5           0.005   0.0   0
          26.5       29.5           0.005   0.0   0
          29.5       29.5           0.005   0.0   0
        </head_measurements>
      </head_inversion_data>
      <!-- -->
      <!-- -->
      <!-- ******************************************** -->
      <!-- measurements of solute concentration         -->
      <!-- ******************************************** -->
      <solute_concentration_inversion_data regularization_factor="1e-6" regularization_type="dynamic">
        <!-- ******************************************** -->
        <!-- m0 = zeroth temporal moment of concentration -->
        <!-- ******************************************** -->
        <m0_inversion_data sampling_volume="0.1 0.230" SV_max="0.0 0.0" SV_step="1.0 0.4" SV_limit="10.0">
          <m0_measurements total="16" datafile="">
            <!-- (one line per location) must have exactly the following format: --> 
            <!-- x, y, abs_error, rel_error, value (seperated by blank or tab) -->
          20.5      20.5           5.001    0.025   0
          23.5      20.5           5.001    0.025   0
          26.5      20.5           5.001    0.025   0
          29.5      20.5           5.001    0.025   0
          20.5       23.5           5.001   0.025   0
          23.5       23.5           5.001   0.025   0
          26.5       23.5           5.001   0.025   0
          29.5       23.5           5.001   0.025   0
          20.5      26.5           5.001    0.025   0
          23.5      26.5           5.001    0.025   0
          26.5      26.5           5.001    0.025   0
          29.5      26.5           5.001    0.025   0
          20.5       29.5           5.001   0.025   0
          23.5       29.5           5.001   0.025   0
          26.5       29.5           5.001   0.025   0
          29.5       29.5           5.001   0.025   0
          </m0_measurements>
        </m0_inversion_data>
        <!-- -->
        <!-- -->
        <!-- ******************************************** -->
        <!-- m1 = first temporal moment of concentration -->
        <!-- ******************************************** -->
        <m1_inversion_data sampling_volume="0.01 2.10">
          <m1_measurements total="16" datafile="">
            <!-- (one line per location) must have exactly the following format: -->
            <!-- x, y, abs_error, rel_error, value (seperated by blank or tab) -->
            20.5      20.5           2.5e5    0.025   0
            23.5      20.5           2.5e5    0.025   0
            26.5      20.5           2.5e5    0.025   0
            29.5      20.5           2.5e5    0.025   0
            20.5       23.5           2.5e5   0.025   0
            23.5       23.5           2.5e5   0.025   0
            26.5       23.5           2.5e5   0.025   0
            29.5       23.5           2.5e5   0.025   0
            20.5      26.5           2.5e5    0.025   0
            23.5      26.5           2.5e5    0.025   0
            26.5      26.5           2.5e5    0.025   0
            29.5      26.5           2.5e5    0.025   0
            20.5       29.5           2.5e5   0.025   0
            23.5       29.5           2.5e5   0.025   0
            26.5       29.5           2.5e5   0.025   0
            29.5       29.5           2.5e5   0.025   0
          </m1_measurements>
        </m1_inversion_data>
        <!-- -->
      </solute_concentration_inversion_data>
      <!-- -->
    </Setup>
    <!-- -->
    <!-- ***************************************** -->
    <!-- Setup #1:-->
    <!-- ***************************************** -->
    <Setup>
      <!-- ***************************************** -->
      <!-- Groundwater Flow BCs: -->
      <!-- ***************************************** -->
      <flow_equation recycle_matrix_hierarchy="yes">
        <boundary orientation="west" bctype="1" nstripes="1">
          <stripe value="100">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe> 
        </boundary> 
        <boundary orientation="east" bctype="1">
          <stripe value="99.88" >
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="south" bctype="0">
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="north" bctype="0">
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
      </flow_equation>
      <!-- ***************************************** -->
      <!-- Concentration BCs: -->
      <!-- ***************************************** -->
      <transport_equation recycle_matrix_hierarchy="no" injection_time="100">
        <boundary orientation="west" bctype="1" nstripes="1">
          <stripe value="0.0" regularization_factor="1.0" regularization_type="dynamic">
            <startpoint>20</startpoint>
            <endpoint>30</endpoint>
          </stripe> 
        </boundary>
        <boundary orientation="east" bctype="-1">
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="south" bctype="0">
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
        <boundary orientation="north" bctype="0">
          <stripe value="0.0">
            <startpoint>0.0</startpoint>
            <endpoint>100.0</endpoint>
          </stripe>
        </boundary>
      </transport_equation>
      <!-- -->
      <!-- -->
      <!-- ***************************************** -->
      <!-- Pumping Data: point source(pumping data) and well data -->
      <!-- ***************************************** -->
      <pumping_data total="0" datafile="">
        <!-- Pumping data must have this format, one line per location (x,y,z): -->
        <!-- x   y         pumping rate   temperature temperature injection time concentration   concentration injection time(sec) (seperated by blank or tab) -->
        4.0   5.00    0.00050    1   7200    0.5 7200
        2.0   5.40    0.00250    1   7200    0.5 7200
      </pumping_data>
      <!-- Take care: In the 2-D well model, the y-axis represents the vertical z-axis.-->
      <well_data total="4" datafile="">
        <!-- Well data format: setup #1 -->
        <!-- x          = position of the well along the x-axis -->
        <!-- zTop       = (upper) z-coordinate at which the notches of the well start -->
        <!-- zBottom    = (lower) z-coordinate at the location of the well-bottom -->
        <!-- k_well     = choose a very high conductivity inside the well, e.g. 10.0 -->
        <!-- flow_rate  = negative for pumping or positive for injection -->
        <!-- T              = temperature difference for injection (will not be used for extraction wells) -->
        <!-- t_inject       = injection time for the heat tracer -->
        <!-- c              = concentration of the tracer (only active for positive flow rates) -->        
        <!-- injection_time = injection time for the solute tracer -->
        <!-- One line per well: -->
        <!-- x   zTop     zBottom   k_well    flow_rate    T     t_inject   c     injection_time -->
        25.01       12.5     12.4      10.0        2.4e-3     0.0   100      0.0  100
        25.01       17.5     17.4      10.0        8e-4     1.0   100      1.0  100
        25.01       32.5     32.4      10.0       -8e-4     0.0   100.0    0.0  100.0
        25.01       37.5     37.4      10.0       -2.4e-3     0.0   100.0    0.0  100.0
      </well_data>
      <!-- -->   
      <!-- --> 
      <!-- ******************* -->
      <!-- lnK data            -->
      <!-- ******************* -->
      <lnk_inversion_data>
        <!-- Direct measurements of hydraulic conductivity K: -->
        <lnk_measurements total="4" datafile="">
          <!-- This data (one line per location) must have exactly the following format: -->
          <!-- x, y, abs_error, rel_error, value (seperated by blank or tab) -->
          2.0    2.0    0.0   0.05    0.0 
          2.0    8.0    0.0   0.05    0.0 
          8.0    2.0    0.0   0.05    0.0
          8.0    8.0    0.0   0.05    0.0
        </lnk_measurements> 
      </lnk_inversion_data>
      <!-- -->
      <!-- -->
      <!-- ******************* -->
      <!-- hydraulic head data -->
      <!-- ******************* -->
      <head_inversion_data regularization_factor="1e-6" regularization_type="dynamic">
        <!-- Measurement of hydraulic head -->
        <head_measurements total="16" datafile="">
          <!-- (one line per location) must have exactly the following format: -->
          <!-- x, y, abs_error, rel_error, value (seperated by blank or tab) -->
          20.5      20.5           0.005   0.0   0
          23.5      20.5           0.005   0.0   0
          26.5      20.5           0.005   0.0   0
          29.5      20.5           0.005   0.0   0
          20.5       23.5           0.005   0.0   0
          23.5       23.5           0.005   0.0   0
          26.5       23.5           0.005   0.0   0
